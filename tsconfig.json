{
  "compilerOptions": {
    // Onde estão os arquivos fonte e para onde compilar
    "rootDir": "./src",
    "outDir": "./build",

    // Ambiente de execução
    "target": "ESNext", // gera código moderno (ES2022+)
    "module": "NodeNext", // usa ESM (import/export) no Node
    "moduleResolution": "NodeNext", // resolução de módulos compatível com Node

    // Melhor interoperabilidade com libs em CommonJS (ex: express)
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    // Mapas de depuração e geração de tipos
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Regras de segurança e checagem
    "strict": true, // modo estrito de verificação
    "skipLibCheck": true // ignora checagem de tipos em libs externas
  },
  "include": ["src"], // apenas transpilar arquivos da pasta src
  "exclude": ["node_modules", "build"] // evita recompilar essas pastas
}
